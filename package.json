{
  "name": "second-brain",
  "private": true,
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vue-tsc && vite build && node build-electron.js && electron-builder",
    "build:electron": "node build-electron.js",
    "build:win": "vue-tsc && vite build && node build-electron.js && electron-builder --win",
    "preview": "vite preview"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron": "^33.2.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.24.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vue-tsc": "^2.1.10",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.secondbrain.app",
    "productName": "Second Brain",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
